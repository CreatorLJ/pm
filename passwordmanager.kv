View


<View>:
    orientation: "vertical"
    website_input: website_input
    emailorusername_input: emailorusername_input
    password_input: password_input
    padding: 40
    spacing: 30
    Label:
        text: 'Password Manager'
    BoxLayout:
        TextInput:
            id: website_input
            hint_text: 'Website'
            size_hint: .7, None
            height: '40'
        Button:
            text: 'Load'
            on_press: root.load_profile()
            size_hint: .3, None
            height: '40'
    BoxLayout:
        TextInput:
            id: emailorusername_input
            hint_text: 'Email or Username'
            size_hint: 1, None
            height: '40'
    BoxLayout:
        TextInput:
            id: password_input
            hint_text: 'Password'
            size_hint: .7, None
            height: '40'
        Button:
            text: 'Generate'
            on_press: root.generate_pw()
            size_hint: .3, None
            height: '40'
    BoxLayout:
        Button:
            text: 'Save'
            on_press: root.save_profile()
            size_hint: 1, None
            height: '40'